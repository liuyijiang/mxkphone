<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mxk_activity_background"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mXKMainWorkBencheActivityDiv"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/mxk_activity_header" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="18dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" >

                <TextView
                    android:id="@+id/mxkprojectviewusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="毛主席"
                    android:textColor="#FFFFFF"
                    android:textSize="18dip" />

                <ImageView
                    android:id="@+id/mxkprojectviewuserimage"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_below="@+id/mXKMainWorkBencheActivityDiv"
            android:id="@+id/mXKMainWorkBencheActivitylinearColor"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:background="#2a5caa" />
    
    <LinearLayout
        android:id="@+id/mXKMainWorkBencheActivitylinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mXKMainWorkBencheActivitylinearColor"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/plane_white_background"
            android:orientation="horizontal"
            android:padding="5dip" >

            <ImageView
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:background="@drawable/datainput"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dip" >

                <TextView
                    android:id="@+id/mxkprojectviewprojectname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2a5caa"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/mxkprojectviewprojectdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dip" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:id="@+id/mxkprojectviewprojectstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="#005831"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/mxkprojectviewcreateplan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="发进度"
                        android:textColor="#009ad6"
                        android:textSize="12dip" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/mxkprojectviewplans"
            android:layout_width="fill_parent"
            android:listSelector="@drawable/listview_bg"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dip" >

        <Button
            android:id="@+id/mxkprojectviewAddMore"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/mxk_activity_header"
            android:text="加载更多"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>