<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mxk_activity_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@drawable/mxk_activity_header"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="18dip" />
        </RelativeLayout>
    </LinearLayout>

   <View
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:background="#2a5caa" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dip"
        android:background="@drawable/plane_white_background"
        android:padding="10dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/MXKLoginViewActivityLoginName"
            android:textColor="#000000"
            android:textSize="14dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <EditText
            android:id="@+id/MXKLoginViewActivityLoginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" >
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/MXKLoginViewActivityPassWord"
            android:textColor="#000000"
            android:textSize="14dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <EditText
            android:id="@+id/MXKLoginViewActivityUserPsss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" >
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="20dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dip" >

            <Button
                android:id="@+id/MXKLoginViewActivityLoginButton"
                android:layout_width="100dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:text="@string/MXKLoginViewActivityLogin" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000" />
    </LinearLayout>

</LinearLayout>