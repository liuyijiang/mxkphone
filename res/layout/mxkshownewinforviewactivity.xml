<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mxk_activity_background"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mXKMainWorkBencheActivityDiv"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/mxk_activity_header" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="18dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" >

                <TextView
                    android:id="@+id/mxkshownewinforviewusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18dip" />

                <ImageView
                    android:id="@+id/mxkshownewinforviewuserimage"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

     <View
            android:layout_below="@+id/mXKMainWorkBencheActivityDiv"
            android:id="@+id/mXKMainWorkBencheActivitylinearColor"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:background="#2a5caa" />
    
    <LinearLayout
        android:id="@+id/mXKMainWorkBencheActivitylinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mXKMainWorkBencheActivitylinearColor"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >

              <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/datainput"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/mxkmainviewmyguanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="我的工程"
            android:textColor="#009ad6"
            android:textSize="16dip" />
        
        <View
            android:layout_width="5dip"
            android:layout_height="5dip"
            />
        
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/procurelistheader"
            android:contentDescription="@string/app_name" />

        <TextView
             android:id="@+id/mxkmainviewmylog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="执行计划"
            android:textColor="#009ad6"
            android:textSize="16dip" />

           <View
            android:layout_width="5dip"
            android:layout_height="5dip"
            />
        
        
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/back"
            android:contentDescription="@string/app_name" />

        <TextView
             android:id="@+id/mxkmainviewmylogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="退出程序"
            android:textColor="#009ad6"
            android:textSize="16dip" />
        
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000" />

        <ListView
            android:id="@+id/mxknewinforview"
            android:layout_width="fill_parent"
            android:listSelector="@drawable/listview_bg"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dip" >

        <Button
            android:id="@+id/MXKLoginViewActivityLoginButton"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/mxk_activity_header"
            android:text="加载更多"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>