<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mxk_activity_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@drawable/mxk_activity_header" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="18dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" >

                <TextView
                    android:id="@+id/mxkmainviewusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18dip" />

                <ImageView
                    android:id="@+id/mxkmainviewuserimage"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

      <View
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:background="#2a5caa" />

    <LinearLayout
        android:id="@+id/mXKMainWorkBencheActivitylinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:padding="2dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/rss"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/mxkmainviewmyguanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="我的关注"
            android:textColor="#009ad6"
            android:textSize="16dip" />
        
        <View
            android:layout_width="5dip"
            android:layout_height="5dip"
            />
        
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/procurelistheader"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="执行计划"
            android:textColor="#009ad6"
            android:textSize="16dip" />

           <View
            android:layout_width="5dip"
            android:layout_height="5dip"
            />
        
        
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/back"
            android:contentDescription="@string/app_name" />

        <TextView
             android:id="@+id/mxkmainviewmylogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="退出程序"
            android:textColor="#009ad6"
            android:textSize="16dip" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

     <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        />
    
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="所有工程："
            android:textColor="#000000"
            android:textSize="16dip" />
    
    <ListView
        android:id="@+id/MXKMainViewList"
        android:layout_width="fill_parent"
        android:listSelector="@drawable/listview_bg"
        android:layout_height="wrap_content" />

</LinearLayout>